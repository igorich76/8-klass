//TurboPascal
program n_14;
var x, y, q, r: integer;
begin
  Writeln('Частное и остаток');
  Write('Введите делимое х>>');
  Readln(x);
  Write('Введите делитель y>>');
  Read(y);
  r:= x;
  q:= 0;
  while r>=y do
  begin
    r:= r-y;
    q:= q+1
  end;
  Writeln('Частное q= ', q);
  Writeln('Остаток r= ', r);
end.

//Алгоритмический
алг Пример_14
нач
цел x,y,r,q
вывод "Частное и остаток"
вывод нс, "Введите делимое х>>"
ввод x
вывод нс, "Введите делитель y>>"
ввод y
r:=x
q:=0
нц пока r>=y |пока делимое больше делителя делай...
r:=r-y
q:=q+1
кц
вывод "Частное q= ", q
вывод нс,"Остаток r=", r
кон

//PascalABC.Net
##  
Println('Частное и остаток');
var x := ReadlnReal('Введите делимое');
var y := ReadlnReal('Введите делитель');
var r := x;
var q := 0;
while r >= y do
begin
  r := r - y;
  q := q + 1
end;
Println('Частное q=', q);
Println('Остаток r=', r); 
