var a:= ReadlnInteger('Введите количество сдачи>>');
Println('Следует сдать:');
Println('банкнот по 1000 руб. -',a div 1000, 'шт.');
a:= a mod 1000;
Println('банкнот по 500 руб. -',a div 500, 'шт.');
a:= a mod 500;
Println('банкнот по 100 руб. -',a div 100, 'шт.');
a:= a mod 100;
Println('банкнот по 50 руб. -',a div 50, 'шт.');
